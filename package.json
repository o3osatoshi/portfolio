{
  "name": "o3osatoshi-portfolio",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:functions": "turbo run build --filter=functions...",
    "build:storybook": "turbo run build --filter=storybook...",
    "build:web": "turbo run build --filter=web...",
    "deploy:functions": "firebase deploy --only functions",
    "dev": "turbo run dev",
    "dev:functions": "turbo run dev --filter=functions...",
    "dev:storybook": "turbo run dev --filter=storybook...",
    "dev:web": "turbo run dev --filter=web...",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "sort:pkg": "sort-package-json **/package.json",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch --parallel"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "sort-package-json": "^3.4.0",
    "tsx": "catalog:",
    "turbo": "^2.5.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=22"
  }
}
