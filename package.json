{
  "name": "o3osatoshi-portfolio",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:functions": "turbo run build --filter=functions...",
    "build:storybook": "turbo run build --filter=storybook...",
    "build:web": "turbo run build --filter=web...",
    "clean": "turbo run clean --parallel",
    "deploy:functions": "firebase deploy --only functions",
    "dev": "turbo run dev",
    "dev:functions": "turbo run dev --filter=functions...",
    "dev:storybook": "turbo run dev --filter=storybook...",
    "dev:web": "turbo run dev --filter=web...",
    "style": "run-s style:pkg style:eslint style:biome",
    "style:biome": "biome check --write",
    "style:biome:fix": "biome check --write --unsafe",
    "style:eslint": "eslint . --fix",
    "style:pkg": "sort-package-json **/package.json",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@o3osatoshi/config": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "npm-run-all": "catalog:",
    "sort-package-json": "^3.4.0",
    "tsx": "catalog:",
    "turbo": "^2.5.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=22"
  }
}
