{
  "name": "o3osatoshi-portfolio",
  "private": true,
  "scripts": {
    "api:extract": "turbo run api:extract --filter=@o3osatoshi/*",
    "api:report": "turbo run api:report --filter=@o3osatoshi/*",
    "build": "turbo run build",
    "build:functions": "turbo run build --filter=@repo/functions...",
    "build:storybook": "turbo run build --filter=@repo/storybook...",
    "build:web": "turbo run build --filter=@repo/web...",
    "check": "run-s check:type check:test",
    "check:test": "turbo run test",
    "check:test:cvrg": "turbo run test:cvrg",
    "check:type": "turbo run typecheck",
    "clean": "turbo run clean --parallel",
    "deploy:functions": "firebase deploy --only functions",
    "dev": "turbo run dev",
    "dev:functions": "turbo run dev --filter=@repo/functions...",
    "dev:storybook": "turbo run dev --filter=@repo/storybook...",
    "dev:web": "turbo run dev --filter=@repo/web...",
    "docs": "typedoc",
    "refine": "run-s style build check api:extract",
    "release": "changeset publish",
    "release:log": "changeset",
    "release:version": "changeset version",
    "style": "run-s style:pkg style:eslint style:biome",
    "style:biome": "biome check . --write",
    "style:biome:fix": "biome check . --write --unsafe",
    "style:biome:pure": "biome check .",
    "style:eslint": "eslint . --fix --cache --cache-location .cache/eslint/",
    "style:eslint:pure": "eslint . --cache --cache-location .cache/eslint/",
    "style:pkg": "sort-package-json --ignore '**/node_modules' --ignore '**/generated' **/package.json",
    "style:pkg:pure": "sort-package-json --ignore '**/node_modules' --check --ignore '**/generated' **/package.json",
    "style:pure": "run-s style:pkg:pure style:eslint:pure style:biome:pure"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@o3osatoshi/config": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-storybook": "^9.1.10",
    "eslint-plugin-vitest": "^0.5.4",
    "jsonc-eslint-parser": "^2.4.0",
    "npm-run-all": "catalog:",
    "sort-package-json": "^3.4.0",
    "tsx": "catalog:",
    "turbo": "^2.5.2",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=22"
  }
}
