{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "api:extract": {
      "cache": true,
      "dependsOn": ["^build", "build"],
      "outputs": ["packages/*/dist/**", "packages/*/etc/**"]
    },
    "api:report": {
      "cache": false,
      "dependsOn": ["api:extract"]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "AUTH_SECRET",
        "AXIOM_API_TOKEN",
        "DATABASE_URL",
        "EXCHANGE_RATE_API_KEY",
        "EXCHANGE_RATE_URL",
        "NEXT_PUBLIC_API_BASE_URL",
        "NEXT_PUBLIC_RAINBOW_PROJECT_ID",
        "UPSTASH_REDIS_REST_TOKEN",
        "UPSTASH_REDIS_REST_URL"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "env:pull": {
      "cache": false,
      "inputs": [],
      "outputLogs": "new-only",
      "outputs": []
    },
    "test": {
      "cache": true,
      "dependsOn": ["^build", "^test"],
      "outputs": []
    },
    "test:cvrg": {
      "cache": true,
      "dependsOn": ["^build", "^test:cvrg"],
      "outputs": [".reports/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
      "outputs": []
    }
  }
}
