{
  "name": "@o3osatoshi/logging",
  "version": "0.1.0",
  "private": false,
  "description": "Axiom-first logging helpers for Node, Edge, and browser runtimes.",
  "keywords": [
    "logging",
    "axiom",
    "metrics",
    "observability"
  ],
  "homepage": "https://github.com/o3osatoshi/portfolio/packages/logging",
  "bugs": {
    "url": "https://github.com/o3osatoshi/portfolio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/o3osatoshi/portfolio.git",
    "directory": "packages/logging"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./axiom": {
      "types": "./dist/axiom.d.ts",
      "import": "./dist/axiom.js",
      "require": "./dist/axiom.cjs",
      "default": "./dist/axiom.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js",
      "require": "./dist/node.cjs",
      "default": "./dist/node.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs",
      "default": "./dist/browser.js"
    },
    "./edge": {
      "types": "./dist/edge.d.ts",
      "import": "./dist/edge.js",
      "require": "./dist/edge.cjs",
      "default": "./dist/edge.js"
    },
    "./nextjs": {
      "types": "./dist/nextjs.d.ts",
      "import": "./dist/nextjs.js",
      "require": "./dist/nextjs.cjs",
      "default": "./dist/nextjs.js"
    },
    "./nextjs/client": {
      "types": "./dist/nextjs-client.d.ts",
      "import": "./dist/nextjs-client.js",
      "require": "./dist/nextjs-client.cjs",
      "default": "./dist/nextjs-client.js"
    },
    "./proxy": {
      "types": "./dist/proxy.d.ts",
      "import": "./dist/proxy.js",
      "require": "./dist/proxy.cjs",
      "default": "./dist/proxy.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "api:extract": "api-extractor run --local",
    "api:report": "api-extractor run --diagnostics",
    "build": "tsup",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "prepublishOnly": "pnpm clean && pnpm typecheck && pnpm test && NODE_ENV=production pnpm build",
    "test": "vitest run",
    "test:cvrg": "vitest run --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@axiomhq/js": "^1.3.1",
    "@axiomhq/logging": "^0.1.6",
    "@axiomhq/nextjs": "^0.1.6",
    "@axiomhq/react": "^0.1.6",
    "@o3osatoshi/config": "workspace:*",
    "@o3osatoshi/toolkit": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "next": "^16.0.10",
    "react": "catalog:",
    "react-dom": "catalog:",
    "rimraf": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "next": "^16 || ^15 || ^14 || ^13",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": "22.x"
  },
  "publishConfig": {
    "access": "public"
  }
}
