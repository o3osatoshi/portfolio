{
  "name": "@repo/edge",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "pnpm -C ../../packages/config build && pnpm -C ../../packages/logging build",
    "build": "wrangler deploy --dry-run --outdir dist",
    "predeploy": "pnpm -C ../../packages/config build && pnpm -C ../../packages/logging build",
    "deploy": "wrangler deploy",
    "predeploy:prv": "pnpm -C ../../packages/config build && pnpm -C ../../packages/logging build",
    "deploy:prv": "wrangler versions upload",
    "predev": "pnpm -C ../../packages/config build && pnpm -C ../../packages/logging build",
    "dev": "wrangler dev",
    "env:pull": "doppler secrets download --project portfolio-edge --config dev --no-file --format env > ./.env.local",
    "env:sync": "doppler secrets --json --project portfolio-edge --config prd | jq -c 'with_entries(.value = .value.computed)' | wrangler secret bulk"
  },
  "dependencies": {
    "@o3osatoshi/logging": "workspace:*",
    "@repo/auth": "workspace:*",
    "@repo/integrations": "workspace:*",
    "@repo/interface": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "wrangler": "^4.54.0"
  },
  "engines": {
    "node": "22.x"
  }
}
